{
  "name": "${environmentName}",
  "description": "Subutai Mattermost",
  "containers": [
    {
      "hostname": "debian",
      "template": "debian-scratch",
      "peer-criteria": "mattermost",
      "size": "${dbcontainertype}"
    }
  ],
  "peer-criteria": [
    {
      "name": "mattermost",
      "max-price": "50"
    }
  ],
  "configuration": {
    "source-url": "https://github.com/absidish/mattermost/archive/master.zip",
    "ansible-playbook": "main.yml",
    "arguments": [
      {
        "key": "key1",
        "value": "value1"
      }
    ],
    "groups": [
      {
        "name": "db",
        "hostnames": [
          "mysql"
        ]
      },
      {
        "name": "mattermost",
        "hostnames": [
          "mattermost"
        ]
      }
    ]
  },
  "user-variables": {
    "dbcontainertype": {
      "description": "You can set TINY,SMALL,MEDIUM,LARGE,HUGE",
      "type": "enum",
      "default": "SMALL",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    },
    "mattermostcontainertype": {
      "description": "You can set TINY,SMALL,MEDIUM,LARGE,HUGE",
      "type": "enum",
      "default": "SMALL",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    },
    "maxPrice": {
      "description": "Enter the max price",
      "type": "int",
      "default": "50",
      "validation": "\\d+"
    },
    "domain": {
      "description": "Enter your domain name",
      "type": "string",
      "default": "mattermost.envs.subutai.cloud",
      "validation": "[a-zA-Z0-9.-]+"
    },
    "environmentName": {
      "description": "Enter your environment name",
      "type": "string",
      "default": "mattermost env",
      "validation": "[a-zA-Z0-9]+"
    }
  }
}
